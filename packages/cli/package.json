{
    "name": "@coupage/cli",
    "description": "A collection of Coupage CLI utilities that aim to simplify the creation of extensible browser-based applications.",
    "keywords": [
        "cli",
        "coupage",
        "extensibility",
        "extension",
        "micro-frontend",
        "webpack"
    ],
    "version": "0.2.0",
    "author": "Rostislav Hristov <rostislav.hristov@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/asual/coupage.git",
        "directory": "packages/cli"
    },
    "bugs": {
        "url": "https://github.com/asual/coupage/issues"
    },
    "bin": {
        "coupage": "bin/coupage"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "rm -rf dist && ttsc",
        "lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
        "prepack": "if test -f tsconfig.json; then npm run lint && npm run build && cp -r bin package.json dist; fi",
        "postpack": "if test -f tsconfig.json; then npm pack ./dist && mv *.tgz ../.. && rm -rf dist/bin dist/package.json; fi"
    },
    "dependencies": {
        "@swc/core": "^1.2.197",
        "@swc-node/core": "^1.9.0",
        "ajv": "^8.11.0",
        "command-line-args": "^5.2.1",
        "copy-webpack-plugin": "^11.0.0",
        "cross-spawn": "^7.0.3",
        "detect-port": "^1.3.0",
        "eslint-webpack-plugin": "^3.1.1",
        "fork-ts-checker-webpack-plugin": "^7.2.11",
        "glob": "^8.0.3",
        "html-webpack-plugin": "^5.5.0",
        "pirates": "^4.0.5",
        "swc-loader": "^0.2.1",
        "typescript": "^4.7.3",
        "webpack": "^5.73.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.9.2",
        "webpack-merge": "^5.8.0",
        "workbox-webpack-plugin": "^6.5.3"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/cross-spawn": "^6.0.2",
        "@types/detect-port": "^1.3.2",
        "@types/glob": "^7.2.0",
        "@types/node": "^17.0.40",
        "@types/webpack-bundle-analyzer": "^4.4.1",
        "@types/workbox-webpack-plugin": "^5.1.8",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.6.2",
        "ttypescript": "^1.5.13",
        "typescript-transform-paths": "^3.3.1"
    }
}
