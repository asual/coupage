{
    "name": "@coupage/cli",
    "description": "A collection of Coupage CLI utilities that aim to simplify the creation of extensible browser-based applications.",
    "keywords": [
        "cli",
        "coupage",
        "extensibility",
        "extension",
        "micro-frontend",
        "webpack"
    ],
    "version": "0.2.6",
    "author": "Rostislav Hristov <rostislav.hristov@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/asual/coupage.git",
        "directory": "packages/cli"
    },
    "bugs": {
        "url": "https://github.com/asual/coupage/issues"
    },
    "bin": {
        "coupage": "bin/coupage"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "rm -rf dist && tspc",
        "lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
        "prepack": "if test -f tsconfig.json; then npm run lint && npm run build && cp -r bin package.json dist; fi",
        "postpack": "if test -f tsconfig.json; then npm pack ./dist && mv *.tgz ../.. && rm -rf dist/bin dist/package.json; fi"
    },
    "dependencies": {
        "@swc-node/core": "^1.10.3",
        "@swc/core": "^1.3.62",
        "ajv": "^8.12.0",
        "command-line-args": "^5.2.1",
        "copy-webpack-plugin": "^11.0.0",
        "cross-spawn": "^7.0.3",
        "detect-port": "^1.5.1",
        "eslint-webpack-plugin": "^4.0.1",
        "fork-ts-checker-webpack-plugin": "^8.0.0",
        "glob": "^10.2.7",
        "html-webpack-plugin": "^5.5.3",
        "pirates": "^4.0.5",
        "swc-loader": "^0.2.3",
        "typescript": "^5.1.3",
        "webpack": "^5.86.0",
        "webpack-bundle-analyzer": "^4.9.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.9.0",
        "workbox-webpack-plugin": "^7.0.0"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/cross-spawn": "^6.0.2",
        "@types/detect-port": "^1.3.3",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.3.0",
        "@types/webpack-bundle-analyzer": "^4.6.0",
        "@types/workbox-webpack-plugin": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-typescript-sort-keys": "^2.3.0",
        "prettier": "^2.8.8",
        "ts-patch": "^3.0.0-rc3",
        "typescript-transform-paths": "^3.4.6"
    }
}